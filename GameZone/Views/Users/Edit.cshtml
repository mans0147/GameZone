@model ProfileFormViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="row align-content-center justify-content-center ">
    <form class="col-md-4   pt-4" asp-action="Edit" method="post">
        x<input type="hidden" asp-for="Id"/>
        <div class="form-floating mb-3">
            <input asp-for="FirstName" class="form-control" aria-required="true" placeholder="First Name" maxlength="100" />
            <label asp-for="FirstName">First Name</label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="LastName" class="form-control mt-4" aria-required="true" placeholder="Last Name" maxlength="100" />
            <label asp-for="LastName">Last Name</label>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Email">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="UserName" class="form-control mt-4" aria-required="true" placeholder="User Name" maxlength="100" />
            <label asp-for="UserName">User Name</label>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <button  type="submit" class="w-100 mt-2 btn btn-lg btn-light text-black">Save</button>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}